{
  "name": "yuxiaohangreader",
  "private": true,
  "version": "2.0.0",
  "author": "Yuxiaohang",
  "main": "background.js",
  "license": "ISC",
  "description": "Refactor the entire YuxiaohangReader1.0 project.",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "nodemon --exec electron . --watch ./ --ext .html",
    "dist": "vite build && electron-builder",
    "packager": "electron-packager ./ YuxiaohangReader --win --out ./outputs"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "electron-win-state": "^1.1.22",
    "esbuild": "^0.20.0",
    "fs-extra": "^11.2.0",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.0",
    "shortid": "^2.2.16",
    "vue": "^3.4.19",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "nodemon": "^3.1.0",
    "sass": "^1.69.5",
    "vite": "^5.1.4"
  },
  "build": {
    "productName": "YuxiaohangReader",
    "appId": "001",
    "asar": false,
    "electronVersion": "28.2.2",
    "directories": {
      "output": "release/${version}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "category": ""
    },
    "win": {
      "icon": "./src/assets/icon/icon.ico",
      "target": [
        "nsis",
        "portable",
        "zip"
      ],
      "verifyUpdateCodeSignature": false
    },
    "linux": {}
  }
}
